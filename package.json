{
  "devDependencies": {
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "vite": "^7.3.0",
    "wait-on": "^9.0.3"
  },
  "main": "electron/main.cjs",
  "name": "champions-academy",
  "version": "1.0.0",
  "type": "commonjs",
  "scripts": {
    "dev": "vite",
    "electron": "electron .",
    "electron:dev": "electron .",
    "electron:build": "electron-builder"
  },
  "build": {
    "appId": "com.championsacademy.crm",
    "productName": "ChampionsAcademy",
    "files": [
      "dist/**",
      "electron/**",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}